# Example environment variables for audio_extract deployment
# Copy to .env and fill in your values

# Google Drive Configuration
AUDIO_EXTRACT_FOLDER_ID=your-drive-folder-id-here
AUDIO_EXTRACT_FOLDER_ID_STAGING=your-staging-drive-folder-id

# Google Cloud Storage
GCS_BUCKET_NAME=your-audio-extracts-prod
GCS_BUCKET_NAME_STAGING=your-audio-extracts-staging
ENABLE_GCSFUSE=true

# Credentials (paths on host system)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/drive-service-account.json
GCS_CREDENTIALS_PATH=./credentials/gcs-service-account.json

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=alerts@example.com
ALERT_EMAIL_STAGING=staging-alerts@example.com

# Container Registry (for GitHub Actions)
REGISTRY=ghcr.io
IMAGE_NAME=your-github-username/dnd_notetaker/audio-extract

# Deployment Hosts
STAGING_HOST=staging.example.com
STAGING_USER=deploy
PRODUCTION_HOST=prod.example.com
PRODUCTION_USER=deploy

# URLs for health checks
STAGING_URL=https://staging.example.com
PRODUCTION_URL=https://prod.example.com

# Slack Notifications (optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL